<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Carrus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mark_color</item>
        <item name="colorPrimaryVariant">#967BB6</item>
        <item name="colorOnPrimary">#0000CA</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mark_color</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- System bars color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--<item name="android:navigationBarColor">@android:color/transparent</item>-->
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>

        <item name="bottomSheetDialogTheme">@style/ComponentBottomSheetDialog</item>
    </style>

    <style name="Theme.Carrus.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Carrus</item>
    </style>
</resources>