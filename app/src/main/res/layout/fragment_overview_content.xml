<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import
            alias="View"
            type="android.view.View"/>
        <variable
            name="car"
            type="com.ivangarzab.carbud.data.Car" />
        <variable
            name="sortByNameClickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="sortByDateClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/fragment_overview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/overviewServicesLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/base_8"
                android:gravity="center"
                android:text="@string/services"
                android:textSize="@dimen/text_20"
                android:textColor="?android:textColor"
                android:textStyle="italic"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:textColor="@color/black"/>

            <TextView
                android:id="@+id/overviewServiceNameLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_16"
                android:padding="@dimen/base_4"
                android:gravity="start|bottom"
                android:text="@string/name"
                android:textSize="@dimen/text_12"
                android:textColor="?android:textColor"
                android:textStyle="italic"
                android:onClickListener="@{sortByNameClickListener}"
                app:layout_constraintTop_toBottomOf="@+id/overviewServicesLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/overviewServiceDateLabel"
                tools:textColor="@color/black"/>

            <TextView
                android:id="@+id/overviewServiceDateLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/base_16"
                android:padding="@dimen/base_4"
                android:gravity="end|bottom"
                android:text="@string/date"
                android:textSize="@dimen/text_12"
                android:textColor="?android:textColor"
                android:textStyle="italic"
                android:onClickListener="@{sortByDateClickListener}"
                app:layout_constraintTop_toBottomOf="@+id/overviewServicesLabel"
                app:layout_constraintStart_toEndOf="@id/overviewServiceNameLabel"
                app:layout_constraintEnd_toEndOf="parent"
                tools:textColor="@color/black"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/overviewContentServiceList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/overviewServiceNameLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/item_component"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/overviewContentServiceWallLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/backgroundColor"
                android:visibility="@{car.services.isEmpty() ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toBottomOf="@+id/overviewServicesLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/overviewContentServiceWallText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:text="@string/no_services_scheduled"
                    android:textColor="?android:textColor"
                    android:textSize="@dimen/text_18"
                    android:textStyle="italic"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:textColor="@color/black" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>