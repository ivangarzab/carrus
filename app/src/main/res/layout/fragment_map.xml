<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mapRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:name="com.google.android.gms.maps.SupportMapFragment"
            tools:context=".ui.map.MapFragment"
            android:id="@+id/mapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            map:cameraZoom="15"
            map:mapType="normal"
            map:uiCompass="true"
            map:uiScrollGestures="true"
            map:uiRotateGestures="true"
            map:uiTiltGestures="true"
            map:uiZoomControls="true"
            map:uiZoomGestures="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_100"
            android:layout_marginStart="@dimen/base_16"
            android:padding="@dimen/base_8"
            android:elevation="@dimen/base_8"
            android:background="@drawable/bg_round_corners"
            android:backgroundTint="@color/black_30_percent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/mapGasStationButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginBottom="@dimen/base_8"
                android:padding="@dimen/base_2"
                android:tint="@color/indigo"
                android:contentDescription="Gas Station search button"
                android:src="@drawable/ic_add"/>

            <ImageView
                android:id="@+id/mapCarWashButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginBottom="@dimen/base_8"
                android:padding="@dimen/base_2"
                android:tint="@color/indigo"
                android:contentDescription="Car Wash search button"
                android:src="@drawable/ic_image_upload"/>

            <ImageView
                android:id="@+id/mapRepairShopButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:padding="@dimen/base_2"
                android:contentDescription="Repair Shop search button"
                android:tint="@color/indigo"
                android:src="@drawable/ic_delete_trash"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>