<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import
            alias="View"
            type="android.view.View" />
        <variable
            name="imageClickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="expandClickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="submitClickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="state"
            type="com.ivangarzab.carrus.ui.create.CreateViewModel.CarModalState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/createRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/createAppBarLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.Carrus.AppBarOverlay"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/createToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@{state.title}"
                app:popupTheme="@style/Theme.Carrus.PopupOverlay"
                tools:title="Add a Car"/>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:id="@+id/createScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/createAppBarLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/createFieldsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/createImageLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/createAddPhotoButton"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/create_action_button_height"
                        android:layout_marginTop="@dimen/base_16"
                        android:layout_marginBottom="@dimen/base_8"
                        android:text="@string/add_a_photo"
                        android:backgroundTint="?android:colorBackground"
                        app:icon="@drawable/ic_add"
                        app:iconSize="@dimen/create_action_button_icon_size"
                        app:iconGravity="textStart"
                        android:onClickListener="@{imageClickListener}"
                        android:visibility="@{state.imageUri != null ? View.GONE : View.VISIBLE}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:visibility="visible"/>

                    <ImageView
                        android:id="@+id/createPreviewImage"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="@dimen/base_16"
                        android:contentDescription="@string/label_artwork"
                        android:scaleType="fitXY"
                        android:onClickListener="@{imageClickListener}"
                        android:background="@drawable/bg_image_outline"
                        android:visibility="@{state.imageUri != null ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:visibility="gone"/>

                    <ImageView
                        android:id="@+id/createUploadImage"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_margin="8dp"
                        android:contentDescription="@string/label_artwork"
                        android:onClickListener="@{imageClickListener}"
                        android:src="@drawable/ic_image_upload"
                        android:visibility="@{state.imageUri != null ? View.VISIBLE : View.GONE}"
                        app:tint="@color/silver"
                        app:layout_constraintEnd_toEndOf="@id/createPreviewImage"
                        app:layout_constraintBottom_toBottomOf="@id/createPreviewImage"
                        tools:visibility="gone"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/createNicknameInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:placeholderText="@string/nickname"
                    app:layout_constraintTop_toBottomOf="@+id/createImageLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/createNicknameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:autofillHints="false"
                        android:hint="@string/nickname"
                        android:text="@{state.nickname}"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/createMakeInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:placeholderText="@string/make"
                    app:layout_constraintTop_toBottomOf="@+id/createNicknameInputLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/createMakeInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:autofillHints="false"
                        android:hint="@string/make"
                        android:text="@{state.make}"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/createModelInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:placeholderText="@string/model"
                    app:layout_constraintTop_toBottomOf="@+id/createMakeInputLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/createModelInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:autofillHints="false"
                        android:hint="@string/model"
                        android:text="@{state.model}"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/createYearInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:placeholderText="@string/year"
                    app:layout_constraintTop_toBottomOf="@+id/createModelInputLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/createYearInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:autofillHints="false"
                        android:hint="@string/year"
                        android:text="@{state.year}"
                        android:inputType="number"
                        app:layout_constraintBottom_toTopOf="@id/createLicenseInput"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/createLicenseInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:placeholderText="@string/license_no"
                    app:layout_constraintTop_toBottomOf="@+id/createYearInputLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/createLicenseInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/base_8"
                        android:autofillHints="false"
                        android:hint="@string/license_no"
                        android:text="@{state.licenseNo}"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/createExpandLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/createLicenseInputLayout">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/createExpandButton"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/create_action_button_height"
                        android:layout_marginBottom="@dimen/base_8"
                        android:backgroundTint="?android:colorBackground"
                        android:text="@string/more_details"
                        app:icon="@{state.expanded ? @drawable/ic_arrow_drop_up : @drawable/ic_arrow_drop_down}"
                        app:iconSize="@dimen/create_action_button_icon_size"
                        app:iconGravity="textStart"
                        android:onClickListener="@{expandClickListener}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:textColor="@color/black"
                        tools:visibility="visible"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/createOdometerInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:placeholderText="@string/total_miles"
                        android:visibility="@{state.expanded ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/createMiPerGalInputLayout"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/createOdometerInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/base_8"
                            android:autofillHints="false"
                            android:hint="@string/total_miles"
                            android:text="@{state.totalMiles}"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/createMiPerGalInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:placeholderText="@string/miles_per_gallon"
                        android:visibility="@{state.expanded ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/createOdometerInputLayout"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/createMiPerGalInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/base_8"
                            android:layout_marginStart="@dimen/base_8"
                            android:autofillHints="false"
                            android:hint="@string/miles_per_gallon"
                            android:text="@{state.milesPerGallon}"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/createVinNumberInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:placeholderText="@string/vin_no"
                        android:visibility="@{state.expanded ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@id/createOdometerInputLayout"
                        app:layout_constraintEnd_toStartOf="@id/createMiPerGalInputLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/createExpandButton">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/createVinNumberInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/base_8"
                            android:autofillHints="false"
                            android:hint="@string/vin_no"
                            android:text="@{state.vinNo}"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/createTirePressureInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:placeholderText="@string/tire_pressure"
                        android:visibility="@{state.expanded ? View.VISIBLE : View.GONE}"
                        app:layout_constraintTop_toBottomOf="@id/createOdometerInputLayout"
                        app:layout_constraintStart_toEndOf="@id/createOdometerInputLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/createExpandButton">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/createTirePressureInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/base_8"
                            android:autofillHints="false"
                            android:hint="@string/tire_pressure"
                            android:text="@{state.tirePressure}"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/createSubmitButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/create_action_button_height"
                    android:layout_marginBottom="@dimen/base_8"
                    android:text="@{state.actionButton}"
                    android:textColor="@color/white"
                    android:onClickListener="@{submitClickListener}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/createExpandLayout"
                    tools:textColor="@color/black"
                    tools:text="Submit"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>