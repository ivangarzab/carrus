<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.overview.OverviewFragment">

    <data>
        <import
            alias="View"
            type="android.view.View"/>
        <variable
            name="car"
            type="com.ivangarzab.carrus.data.Car" />
        <variable
            name="addCarClickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="addComponentClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/overviewRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/overviewAppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:fitsSystemWindows="true"
            android:background="?attr/backgroundColor"
            android:theme="@style/Theme.Carrus.AppBarOverlay">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/overviewToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:background="@drawable/bg_toolbar_round_corners_bottom"
                android:backgroundTint="?attr/colorPrimary"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@+id/overviewToolbar">

                <ImageView
                    android:id="@+id/overviewToolbarImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/label_artwork"
                    android:backgroundTint="@color/black"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    tools:src="@drawable/image_default_background"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/base_65">

                    <TextView
                        android:id="@+id/overviewCarPlates"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/base_32"
                        android:layout_marginEnd="@dimen/base_32"
                        android:text="@{car.licenseNo}"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/white"
                        tools:text="ABC DEF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/overviewCarDetails" />

                    <TextView
                        android:id="@+id/overviewCarDetails"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/base_32"
                        android:layout_marginEnd="@dimen/base_32"
                        android:visibility="@{car.nickname.isEmpty() ? View.GONE : View.VISIBLE}"
                        android:text="@{car.year + ' ' + car.make + ' ' + car.model}"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_22"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:text="Year Make Model" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/overviewToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:title="@{car.nickname.isEmpty() ? car.make + ' ' + car.model : car.nickname}"
                    app:titleMargin="@dimen/base_16"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/Theme.Carrus.PopupOverlay"
                    tools:title="Car Name" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <include layout="@layout/fragment_overview_content"
            android:id="@+id/overviewContent"
            app:car="@{car}"
            tools:visibility="invisible" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/overviewAddFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_16"
            android:contentDescription="@string/label_button"
            android:visibility="@{car == null ? View.GONE : View.VISIBLE}"
            android:src="@drawable/ic_add"
            android:backgroundTint="@color/mark_color"
            app:borderWidth="0dp"
            app:fabSize="normal"
            app:backgroundTintMode="src_atop"
            android:onClickListener="@{addComponentClickListener}"
            app:layout_anchor="@id/overviewAppBarLayout"
            app:layout_anchorGravity="bottom|end" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/overviewAddWallLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/backgroundColor"
            android:onClickListener="@{addCarClickListener}"
            android:visibility="@{car == null ? View.VISIBLE : View.GONE}"
            tools:visibility="invisible">

            <TextView
                android:id="@+id/overviewAddWallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/base_20"
                android:text="@string/add_new_car_capitalized"
                android:textColor="?android:textColor"
                android:textSize="@dimen/text_18"
                android:textStyle="bold|italic"
                android:scaleY="1.2"
                android:scaleX="1.2"
                app:drawableTopCompat="@drawable/ic_add"
                app:drawableTint="?android:textColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>