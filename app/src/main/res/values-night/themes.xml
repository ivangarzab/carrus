<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Carrus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mark_color</item>
        <item name="colorPrimaryVariant">@color/off_black</item>
        <item name="colorOnPrimary">@color/off_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo</item>
        <item name="colorSecondaryVariant">@color/off_black</item>
        <item name="colorOnSecondary">@color/off_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--<item name="android:navigationBarColor">@android:color/transparent</item>-->
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/background</item>
        <item name="android:textColor">@color/silver</item>

        <item name="bottomSheetDialogTheme">@style/ComponentBottomSheetDialog</item>
    </style>

    <style name="Theme.Carrus.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">?attr/backgroundColor</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Carrus</item>
    </style>
</resources>