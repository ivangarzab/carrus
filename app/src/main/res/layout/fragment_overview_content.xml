<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import
            alias="View"
            type="android.view.View"/>
        <variable
            name="car"
            type="com.ivangarzab.carrus.data.Car" />
        <import
            alias="SortingType"
            type="com.ivangarzab.carrus.ui.overview.SortingCallback.SortingType"/>
        <variable
            name="sortingCallback"
            type="com.ivangarzab.carrus.ui.overview.SortingCallback" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/fragment_overview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.ivangarzab.carrus.ui.customviews.StackingMessagesView
                android:id="@+id/overviewMessagesLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:background="@color/silver"/>

            <TextView
                android:id="@+id/overviewServicesLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/base_8"
                android:gravity="center"
                android:text="@string/services"
                android:textSize="@dimen/text_20"
                android:textColor="?android:textColor"
                android:textStyle="italic"
                app:layout_constraintTop_toBottomOf="@+id/overviewMessagesLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/overviewServicesSortingLayout"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_16"
                android:layout_marginEnd="@dimen/base_16"
                app:layout_constraintTop_toBottomOf="@+id/overviewServicesLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/overviewServiceSortNoneCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/base_6"
                    app:cardCornerRadius="@dimen/base_16"
                    android:focusable="true"
                    android:clickable="true"
                    android:onClick="@{() -> sortingCallback.onSort(SortingType.NONE)}">
                    <TextView
                        android:id="@+id/overviewServiceSortNoneLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/base_6"
                        android:gravity="start|bottom"
                        android:text="@string/none"
                        android:textSize="@dimen/text_12"
                        android:textColor="?android:textColor"
                        android:textStyle="italic" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/overviewServiceSortNameCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/base_6"
                    app:cardCornerRadius="@dimen/base_16"
                    android:focusable="true"
                    android:clickable="true"
                    android:onClick="@{() -> sortingCallback.onSort(SortingType.NAME)}">
                    <TextView
                        android:id="@+id/overviewServiceSortNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/base_6"
                        android:gravity="start|bottom"
                        android:text="@string/name"
                        android:textSize="@dimen/text_12"
                        android:textColor="?android:textColor"
                        android:textStyle="italic"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/overviewServiceSortDateCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/base_6"
                    app:cardCornerRadius="@dimen/base_16"
                    android:focusable="true"
                    android:clickable="true"
                    android:onClick="@{() -> sortingCallback.onSort(SortingType.DATE)}">
                    <TextView
                        android:id="@+id/overviewServiceSortDateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/base_6"
                        android:gravity="end|bottom"
                        android:text="@string/date"
                        android:textSize="@dimen/text_12"
                        android:textColor="?android:textColor"
                        android:textStyle="italic"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/overviewContentServiceList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/base_8"
                app:layout_constraintTop_toBottomOf="@+id/overviewServicesSortingLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/item_service"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/overviewContentServiceWallLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/backgroundColor"
                android:visibility="@{car.services.isEmpty() ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toBottomOf="@+id/overviewServicesLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/overviewContentServiceWallText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:text="@string/no_services_scheduled"
                    android:textColor="?android:textColor"
                    android:textSize="@dimen/text_18"
                    android:textStyle="italic"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>