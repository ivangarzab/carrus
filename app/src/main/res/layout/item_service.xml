<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import
            alias="View"
            type="android.view.View"/>
        <variable
            name="state"
            type="com.ivangarzab.carrus.ui.overview.data.ItemServiceState" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/base_16"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/serviceItemInnerRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_8"
            android:layout_marginBottom="@dimen/base_16"
            android:layout_marginStart="@dimen/base_8"
            android:layout_marginEnd="@dimen/base_8">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/serviceItemGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".59"/>

            <ImageView
                android:id="@+id/serviceItemBackgroundImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/label_artwork"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/serviceItemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_16"
                android:layout_marginStart="@dimen/base_8"
                android:text="@{state.name}"
                android:textSize="@dimen/text_20"
                android:textStyle="italic"
                android:textColor="?android:textColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/serviceItemGuideline"
                tools:text="SERVICE" />

            <TextView
                android:id="@+id/serviceItemDueDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_16"
                android:layout_marginEnd="@dimen/base_4"
                android:text="@{state.dueDateFormat}"
                android:textColor="?android:textColor"
                android:textSize="@dimen/text_18"
                android:gravity="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/serviceItemGuideline"
                app:layout_constraintEnd_toStartOf="@+id/serviceItemExpandIcon"
                app:layout_constraintBottom_toTopOf="@id/serviceItemPrice"
                tools:text="10.2 months" />

            <ImageView
                android:id="@+id/serviceItemExpandIcon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="@dimen/base_8"
                android:contentDescription="@string/label_icon"
                android:padding="@dimen/base_8"
                android:src="@{state.expanded ? @drawable/ic_arrow_drop_up : @drawable/ic_arrow_drop_down}"
                app:tint="?android:textColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@drawable/ic_arrow_drop_down"/>

            <TextView
                android:id="@+id/serviceItemDetails"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/base_8"
                android:text="@{state.details}"
                android:textSize="@dimen/text_16"
                android:textColor="?android:textColor"
                android:visibility="@{state.expanded ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toBottomOf="@id/serviceItemExpandIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/serviceItemGuideline"
                app:layout_constraintBottom_toTopOf="@id/serviceItemBottomDivider"
                tools:text="Brand Name and type of material" />

            <TextView
                android:id="@+id/serviceItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_10"
                android:layout_marginEnd="@dimen/base_8"
                android:text="@{state.price}"
                android:textSize="@dimen/text_16"
                android:textColor="?android:textColor"
                android:visibility="@{state.expanded ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toBottomOf="@id/serviceItemDueDate"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="$100.00" />

            <TextView
                android:id="@+id/serviceItemRepairDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/base_8"
                android:text="@{state.repairDateFormat}"
                android:textSize="@dimen/text_16"
                android:textColor="?android:textColor"
                android:visibility="@{state.expanded ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toBottomOf="@id/serviceItemPrice"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="on 12/12/22" />

            <View
                android:id="@+id/serviceItemBottomDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/base_8"
                android:background="@color/grabber"
                android:visibility="@{state.expanded ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toBottomOf="@id/serviceItemRepairDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/serviceItemTrashIcon"
                android:layout_width="@dimen/base_42"
                android:layout_height="@dimen/base_42"
                android:layout_marginTop="@dimen/base_8"
                android:contentDescription="@string/label_icon"
                android:padding="8dp"
                android:src="@drawable/ic_delete_trash"
                android:visibility="@{state.expanded ? View.VISIBLE : View.GONE}"
                app:tint="?android:textColor"
                app:layout_constraintTop_toBottomOf="@id/serviceItemBottomDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/serviceItemEditIcon"
                android:layout_width="@dimen/base_42"
                android:layout_height="@dimen/base_42"
                android:layout_marginTop="@dimen/base_8"
                android:contentDescription="@string/label_icon"
                android:padding="8dp"
                android:src="@drawable/ic_edit"
                android:visibility="@{state.expanded ? View.VISIBLE : View.GONE}"
                app:tint="?android:textColor"
                app:layout_constraintTop_toBottomOf="@id/serviceItemBottomDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>