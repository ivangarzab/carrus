<resources>
    <!-- Base application theme. -->
    <style name="Theme.Carrus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mark_color</item>
        <item name="colorPrimaryVariant">@color/mark_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mark_color</item>
        <item name="colorSecondaryVariant">@color/mark_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- System bars color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--<item name="android:navigationBarColor">@android:color/transparent</item>-->
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="Theme.Carrus.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/mediterraneo</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_anim_mark_i</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Carrus</item>
    </style>
</resources>