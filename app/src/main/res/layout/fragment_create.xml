<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="imageClickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="uploadClickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="submitClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/createRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/createAppBarLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.Carrus.AppBarOverlay"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/createToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Add a Car"
                app:popupTheme="@style/Theme.Carrus.PopupOverlay"
                tools:title="Add a Car"/>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:id="@+id/createScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/createAppBarLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/createFieldsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/createPreviewImage"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/label_artwork"
                    android:scaleType="fitXY"
                    android:onClickListener="@{imageClickListener}"
                    android:background="@drawable/bg_gradient_add_car"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/createNicknameInputLayout"/>

                <ImageView
                    android:id="@+id/createUploadImage"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/label_artwork"
                    android:onClickListener="@{imageClickListener}"
                    android:src="@drawable/ic_image_upload"
                    app:tint="@color/silver"
                    app:layout_constraintEnd_toEndOf="@id/createPreviewImage"
                    app:layout_constraintBottom_toBottomOf="@id/createPreviewImage" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/createNicknameInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:placeholderText="@string/nickname"
                    app:layout_constraintBottom_toTopOf="@id/createMakeInputLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/createNicknameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:autofillHints="false"
                        android:hint="@string/nickname"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/createMakeInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:placeholderText="@string/make"
                    app:layout_constraintBottom_toTopOf="@id/createModelInputLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/createMakeInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:autofillHints="false"
                        android:hint="@string/make"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/createModelInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:placeholderText="@string/model"
                    app:layout_constraintBottom_toTopOf="@id/createYearInputLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/createModelInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:autofillHints="false"
                        android:hint="@string/model"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/createYearInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:placeholderText="@string/year"
                    app:layout_constraintBottom_toTopOf="@id/createLicenseInputLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/createYearInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:autofillHints="false"
                        android:hint="@string/year"
                        android:inputType="number"
                        app:layout_constraintBottom_toTopOf="@id/createLicenseInput"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/createLicenseInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:placeholderText="@string/license_no"
                    app:layout_constraintBottom_toTopOf="@id/createUploadButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/createLicenseInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:autofillHints="false"
                        android:hint="@string/license_no"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/createUploadButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/create_upload_docs"
                    android:textColor="@color/silver"
                    android:onClickListener="@{uploadClickListener}"
                    android:enabled="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/createSubmitButton"
                    tools:textColor="@color/black"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/createSubmitButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/submit"
                    android:textColor="@color/silver"
                    android:onClickListener="@{submitClickListener}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:textColor="@color/black"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>